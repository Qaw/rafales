{{log "hordier" this}}
<div class="hordier">
  <div class="nom">
    <div class="nom-label">Nom</div>
    {{formInput fields.name value=source.name}}
  </div>
  <div class="horde-nom">
    <div class="horde-label">NÂ° de Horde</div>
    {{formInput systemFields.horde value=system.horde}}
  </div>
  <fieldset>
    <legend>Biographie</legend>
    {{formInput systemFields.biographie enriched=enrichedBiographie value=system.biographie name="system.biographie" toggled=true}}
  </fieldset>
  <fieldset>
    <legend>Liens
      <a class="action" data-tooltip="{{localize 'RAFALES.Tooltip.createLink'}}" data-tooltip-direction="UP"><i class="fas fa-plus" data-action="createLink"></i></a></legend>
    {{#each liens as |lien index|}}
      <div class="lien">
        <div class="lien-label">Nom (Lien {{numeroLien index}}) : </div>
        <input class="lien-nom" name="system.liens.{{index}}.nom" type="text" value="{{lien.nom}}" data-dtype="String" />
        <input class="lien-lien" name="system.liens.{{index}}.lien" type="text" value="{{lien.lien}}" data-dtype="String" />
      </div>
    {{/each}}
  </fieldset>
  <fieldset>
    <legend>Notes</legend>
    {{formInput systemFields.notes enriched=enrichedNotes value=system.notes name="system.notes" toggled=true}}
  </fieldset>
</div>